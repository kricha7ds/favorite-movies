<!DOCTYPE html>
<html>
  <head>
    <title>FavoriteMovies</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

  <nav class="navbar navbar-expand-lg bg-light">
    <div class="container-fluid">
      <% if @movie_list.present? %>
        <a class="navbar-brand" href="/"><%= @movie_list.title %></a>
      <% else %>
        <a class="navbar-brand" href="/">FavoriteMovies</a>
      <% end %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <% if @movie_list.present? %>
          <li class="nav-item">
            <%# <a class="nav-link" href="#">Delete</a> %>
            <%= link_to "Delete", @movie_list, method: :delete, class: "nav-link text-danger" %>
          </li>
        <% end %>
        </ul>
        <form class="d-flex" role="search">
          <input class="form-control me-2 " type="search" placeholder="Search Movies" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>
    <%= yield %>
  </body>
</html>
